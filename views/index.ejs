<%- include('./partials/header.ejs') %>

<div class="container">
    <div class="row" style="display: flex; justify-content: space-around;">
        <div class="col-sm-6" style="color: rebeccapurple;">
            <h2 class="alert alert-success text-center">
                Add New Student
            </h2>

            <form method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">
                        Name 232
                    </label>
                    <input type="text" class="form-control"
                            id="name" name="name"
                    >
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">
                        age
                    </label>
                    <input type="text" class="form-control"
                    id="name" name="age"
                    >
                </div>
                <div class="mb-3">
                    <label for="fees" class="form-label">
                        Fees
                    </label>
                    <input type="text" class="form-control"
                    id="name" name="fees"
                    >
                </div>
                

                <button type="submit" class="btn btn-primary" >
                    Submit
                </button>
            </form>

        </div>
        <div class="col-sm-6" style="color: red;">
            <h2 class="alert alert-success text-center">
                List of Student
            </h2>

            <!-- <%# show all data %> -->
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">S. No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Fees</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>                     
                     <% data.forEach( (item,index)=>{ %>
                        <tr>
                            
                            <td><%=  ++index %></td>
                             <td><%=  item.name %></td>
                            <td><%=   item.age %></td>
                            <td><%=  item.fees %></td>
                            <td>
                                <i class="fas fa-pen-square text-info"></i>
                                <i class="fas fa-pen-square text-info"></i>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>